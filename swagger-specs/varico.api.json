      "AccountDto": {
        "type": "object",
        "properties": {
          "referenceId": {
            "type": "string",
            "format": "uuid"
          },
          "fullName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AccountSummaryDto": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "totalAmountSpent": {
            "type": "number",
            "format": "double"
          },
          "transactions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AccountTransactionDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AccountTransactionDto": {
        "type": "object",
